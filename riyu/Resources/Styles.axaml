        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0,0,0,2"/>
        <Setter Property="BorderBrush" Value="#252525"/>
    </Style>
    
    <!-- 下划线文本框聚焦且指针悬停时样式 - 保持相同样式 -->
